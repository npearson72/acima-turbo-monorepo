{
  "extends": "@acima/tsconfig/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "@api/*": ["./src/api/*"],
      "@configs/*": ["./src/configs/*"],
      "@db/*": ["./src/db/*"],
      "@domains/*": ["./src/domains/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
